<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <!-- Google fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

  <link rel="stylesheet" href="./css/dashboard.css">
</head>

<body>
  <div id="dashboard-container">
    <div id="switch-tabs">
      <a href="/dashboard">
        <span class="switch-btn" id="dashboard">
          Dashboard
        </span>
      </a>
      <a href="/tasks">
        <span class="switch-btn" id="my-tasks">
          Tasks
        </span>
      </a>
    </div>
    <!-- For Dates -->
    <div id="date-day">
      <div class="tasks-page-date">
        <span id="tasks-date">
          
        </span>
        <span id="tasks-month">
          
        </span>
        <span id="tasks-year">
          
        </span>
      </div>
      <span id="tasks-day">
        
      </span>
      <!-- Search Bar -->
    </div>

    <div id="dashboard-body">
      <!-- Greetings -->
      <div id="greetings">
        <div id="greet-msg">
          
        </div>
        <div id="user-name">
          Ashis!
        </div>
      </div>

      <!-- ProgressBAr -->
      <% let counter=0 %>
      <% let total=0 %>
      <% for(let i of Todo_List) { %>
        <% total=total + 1 %>
        <% if(i.completed==true) { %>
            <% counter=counter + 1 %>
        <% } %>
      <% } %>

      <div id="progress-box" data-count=<%= counter%> data-total=<%= total %>>
        <div id="progress-bar">
          <div id="completed-percent">

          </div>
        </div>
        <div id="progress-label">
          <div id="completed-bar">
            <span class="progress-indicator" id="completed-indicator"></span>
            Completed(
            <span id="completed-num"></span>)
          </div>
          <div id="pending-bar">
            <span class="progress-indicator" id="pending-indicator"></span>
            Pending
            (<span id="pending-num"></span>)
          </div>
        </div>
      </div>


      <!-- Heading Design -->
      <div id="todays-heading">
        <span>Plans for today,</span>
      </div>

      <!-- When there is no tasks -->
      <% if(Todo_List.length==0) { %>
      <div class="no_tasks">
        <img src="/images/sad.png" alt="">
        <span>No Tasks Added Yet!</span>
      </div>
      <% } %>
      <!-- Tasks Container -->
      <% let count=0 %>
      <ul id="dashboard-tasks">
        <% for(let i of Todo_List) { %>
            <% if(i.completed==false) { %>
                <li class="dashboard-task-list">
                    <div id="in-progress-indicator">
                        <span id="animated-indicator"></span>
                        <span>In Progress</span>
                    </div>
                    <span class="task-title">
                        <a href="/tasks">
                            <%= i.title %>
                        </a>
                    </span>
                    <div class="created_Date">
                        <span>Created: <%= i.myDate %></span>
                        <span>Time: <%= i.currentTime %></span>
                    </div>
                 </li>
            <% } else {%>
            <% count=count + 1 %>
          <%}%>
        <% } %>
      </ul>
      <% if((Todo_List.length==count) && Todo_List.length !=0) {%>
        <!-- When All Tasks are Completed -->
        <div class="no_tasks">
          <img src="/images/party.png" alt="">
          <span>Great job on finishing all your tasks!</span>
        </div>
      <%}%>

    </div>
  </div>
    <script src="./js/dashboard.js"></script>       
    </script>
</body>

</html>